<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false" >
        <shape >
            <corners 
                android:radius="3dp" />
            <gradient 
                android:startColor="#f7d51d"
                android:centerColor="#f8cf2a"
                android:endColor="#ffe124" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape >
            <corners 
                android:radius="2dp" />
            <gradient 
                android:startColor="#0090ff"
                android:centerColor="#0090ff"
                android:endColor="#0090ff" />
        </shape>
    </item>
</selector>